@model string

@if (string.IsNullOrWhiteSpace(Model))
{
    <span class="text-muted">Preview will appear here</span>
}
else
{
    <div class="alert alert-secondary">
        <strong>Your Manga Will Be Saved In This Folder Format:</strong>
        <pre class="mb-0 mt-2">@Html.Raw($"{@Model}.cbz")</pre>
    </div>
}