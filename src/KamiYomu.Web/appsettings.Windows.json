{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "AgentDb": "Filename=./db/main.db;Connection=shared;",
    "ImageDb": "Filename=./db/image.db;Connection=shared;",
    "WorkerDb": "./db/worker.db"
  },
  "SpecialFolders": {
    "LogDir": "./logs",
    "AgentsDir": "./agents",
    "DbDir": "./db",
    "MangaDir": "./manga"
