		<Message Text="ðŸ“¦ Version: $(Version)" Importance="High" />
		<Message Text="ðŸ”– VersionSuffix: $(VersionSuffix)" Importance="High" />
		<Message Text="ðŸ§© AssemblyVersion: $(AssemblyVersion)" Importance="High" />
		<Message Text="ðŸ§© FileVersion: $(FileVersion)" Importance="High" />
		<Message Text="ðŸ§© InformationalVersion: $(InformationalVersion)" Importance="High" />
	</Target>
</Project>